extends ../layout

block content
	h1.
		Blob ID #{blob._id}
	form(action='/blobs/#{blob._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
		p First Name Last Initial: 
			input#inputName(type='text', value='#{blob.name}', name='name')
		p Device:
			input#inputDevice(type='text', value='#{blob.device}', name='device')
		p OS:
			input#inputOS(type='text', value='#{blob.os}', name='os')
		p DOB:
			input#inputDob(type='date', value='#{blobdob}', name='dob')
		p Notes:
			input#inputNotes(type='text', checked=('#{blob.notes}', name='notes'))
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update
